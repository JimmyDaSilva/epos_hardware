<launch>
  <param name="robot_description" textfile="$(find epos_hardware)/launch/screwdriver.urdf" />
  <node name="epos_hardware" pkg="epos_hardware" type="epos_hardware_node" args="screwdriver_actuator" output="screen">
    <rosparam command="load" file="$(find epos_hardware)/launch/screwdriver.yaml" />
  </node>

  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="joint_state_controller velocity_controller"/>
  <param name="effort_controller/type" value="velocity_controllers/JointVelocityController" />
  <param name="effort_controller/joint" value="screwdriver_joint" />
  <param name="joint_state_controller/type" value="joint_state_controller/JointStateController" />
  <param name="joint_state_controller/publish_rate" value="50" />
</launch>
